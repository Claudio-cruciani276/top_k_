{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}/cpp/SSSKSP_KBFS/KBFS_global.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
